@model ResidentalComplexManagment.Web.Areas.Admin.Models.ResidentIndexVM;
@{
    ViewData["Title"] = "Sakin";
}



<div class="d-lg-flex d-md-flex d-sm-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-4 pb-2 mb-3 ">
    <h2 class="h2">@ViewData["Title"]</h2>
    <div class="btn-toolbar mb-2 mb-md-0">
        <div class="btn-group w-100 ">
            <a href="/admin/resident/add" class="btn p-2 text-white border bg-primary" type="button">Yeni Sakin yarat</a>
        </div>
    </div>
</div>

<div class="card px-4 shadowBox border-0 table-responsive border-radius-card">
    <div class="row align-items-center ">
        <div class="col-lg-6">
            <h5 class="my-4 float-lg-left">@ViewData["Title"]</h5>
        </div>
        <div class="col-lg-6">
            <div class="float-lg-right d-lg-flex  align-items-center">
                <button type="button" class="btn w-100 text-left mr-3 mb-3 mb-lg-0 border colorSecondary">
                    <i class="fas fa-file-download colorSecondary fa-lg mr-2"></i> Hesabat yarat
                </button>
                <input type="text" class="form-control w-100 colorSecondary" placeholder="Axtarış" />
            </div>

        </div>
        <div class="clearfix"></div>
    </div>
    <table class="table w-100 table-borderless mt-4 mt-lg-0">
        <thead class="bgSecondary">
            <tr>
                <th class="pl-4 "> Tarix </th>

                <th class="pl-4 ">Ad Soyad </th>
                <th class="pl-4 ">Təvəlüd </th>
                <th class="pl-4 ">FİN</th>
                <th class="pl-4 ">Telefon Nömrəsi</th>
                <th class="pl-4 ">İndi yaşıyır</th>
                <th class="pl-4 ">Mənzil</th>
                <th class="pl-4 ">Bina</th>
                <th class="pl-4 ">MKT</th>
                <th class="pl-4 ">ACTION </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in @Model.Residents)
            {
                <tr>
                    <td class="pl-4" data-label="Tarix">@item.Created</td>

                    <td class="pl-4" data-label="Şərti ad">@item.FullName</td>
                    <td class="pl-4" data-label="Təvəlüd">@item.Birthday?.ToString("dd-MM-yyyy")</td>
                    <td class="pl-4" data-label="Fin">@item.FIN</td>
                    <td class="pl-4" data-label="Telefon">@item.PhoneNumber</td>
                    <td class="pl-4 @(item.IsCurrentResident?"text-success":"text-warning")" data-label="Ünvan">@item.ResidentState</td>
                    <td class="pl-4" data-label="Mənzil">@item.AppartmentName</td>
                    <td class="pl-4" data-label="Bina">@item.BuildingName</td>
                    <td class="pl-4" data-label="MKT">@item.MKTName</td>



                    <td class="pl-4" data-label="ACTION">
                        <a asp-action="Update" asp-controller="Resident" asp-route-id="@item.Id"><i class="far fa-edit"></i> </a>
                        @if (item.IsCurrentResident)
                        {
                          <a asp-action="AddDebtItem" asp-controller="Resident" asp-route-id="@item.Id"><i class="fas fa-receipt"></i></a>
                        }

                    @*    <a asp-action="Index" asp-controller="Transaction" asp-route-id="@item.Id"><i class="far fa-edit"></i> </a>*@
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <nav class="mt-4">
        <ul class="pagination ">
            <li class="page-item ">
                <a class="page-link border-0" href="#" aria-label="Previous">
                    <i class="fas fa-chevron-left"></i>
                </a>
            </li>
            <li class="page-item active "><a class="page-link border-radius-card " href="#">1</a></li>
            <li class="page-item"><a class="page-link border-0" href="#">2</a></li>
            <li class="page-item"><a class="page-link border-0" href="#">3</a></li>
            <li class="page-item">
                <a class="page-link border-0" href="#" aria-label="Next">
                    <i class="fas fa-chevron-right"></i>
                </a>
            </li>
        </ul>
    </nav>
</div>

@section Script{
<script src="~/assets/js/script.js"></script>
}

