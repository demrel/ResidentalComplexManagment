@model ResidentalComplexManagment.Application.Models.PaymentCoefficientDTO;

@{
    ViewData["Title"] = "Ödəniş əmsalı Əlavə Et";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-4 pb-2 mb-3 ">
    <h2 class="h2">@ViewData["Title"]</h2>
</div>
<form asp-action="Add" asp-controller="PaymentCoefficient" method="post">



    <div class="card mb-3 px-4 shadowBox border-0  border-radius-card">
        <h5 class="my-4 font-weight-bold"> @ViewData["Title"]</h5>


        <div class="row">
            <div class="col-lg-6 col-12">
                <div class="form-group">
                    <label for="formGroupExampleInput">Əmsal</label>
                    <input type="number" min="0.01" step="0.01" class="form-control" id="formGroupExampleInput" placeholder="Əmsal" asp-for="Value" />
                </div>
            </div>

            <div class="col-lg-6 col-12">
                <div class="form-group">
                    <label for="formGroupExampleInput">Qeyd</label>
                    <textarea  class="form-control" id="formGroupExampleInput" placeholder="Qeyd" asp-for="Note"></textarea>
                </div>
            </div>



         
        </div>
    </div>

    <button type="submit"  class="btn p-2  text-white border bg-primary">Yadda saxla</button>
    <a type="button" asp-action="Index" asp-controller="PaymentCofficient" class="btn p-2  text-white border bg-primary">Imtina</a>

</form>

