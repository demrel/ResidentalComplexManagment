@model ResidentalComplexManagment.Web.Areas.Admin.Models.DebtItems.DebtItemIndexVM;
@{
    ViewData["Title"] = "Ödəmə kateqoriyası";
}



<div class="d-lg-flex d-md-flex d-sm-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-4 pb-2 mb-3 ">
    <h2 class="h2">@ViewData["Title"]</h2>
    <div class="btn-toolbar mb-2 mb-md-0">
        <div class="btn-group w-100 ">
            <a href="/admin/debtitem/add" class="btn p-2 text-white border bg-primary" type="button">Ödəniş növü yarat</a>
        </div>
    </div>
</div>

<div class="card px-4 shadowBox border-0 table-responsive border-radius-card">
    <div class="row align-items-center ">
        <div class="col-lg-6">
            <h5 class="my-4 float-lg-left">@ViewData["Title"]</h5>
        </div>
       @* <div class="col-lg-6">
            <div class="float-lg-right d-lg-flex  align-items-center">
                <button type="button" class="btn w-100 text-left mr-3 mb-3 mb-lg-0 border colorSecondary">
                    <i class="fas fa-file-download colorSecondary fa-lg mr-2"></i> Hesabat yarat
                </button>
                <input type="text" class="form-control w-100 colorSecondary" placeholder="Axtarış" />
            </div>

        </div>*@
        <div class="clearfix"></div>
    </div>
    <table class="table w-100 table-borderless mt-4 mt-lg-0">
        <thead class="bgSecondary">
            <tr>
                <th class="pl-4 ">Ad </th>
                <th class="pl-4 ">Tarixdən </th>
                <th class="pl-4 ">Tarixədək</th>
                <th class="pl-4 ">İcbari</th>
                <th class="pl-4 ">Növü</th>
                <th class="pl-4 ">#</th>
               
            </tr>
        </thead>
        <tbody>
            @foreach (var item in @Model.DebtItems)
            {
                <tr>
                    <td class="pl-4" data-label="Ad">@item.Name</td>
                    <td class="pl-4" data-label="Tarixdən">@(item.From?.ToString("dd-MM-yyyy")??" - ")</td>
                    <td class="pl-4" data-label="Tarixədək">@(item.To?.ToString("dd-MM-yyyy")??" - ")</td>
                    <td class="pl-4" data-label="İcbari">@(item.IsComplusory?"Bəli":"Xeyir")</td>
                    <td class="pl-4" data-label="İcbari">@item.Type</td>
                    
                    <td class="pl-4" data-label="ACTION">
                        <a asp-action="Update" asp-controller="Debtitem" asp-route-id="@item.Id"><i class="far fa-edit"></i> </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

