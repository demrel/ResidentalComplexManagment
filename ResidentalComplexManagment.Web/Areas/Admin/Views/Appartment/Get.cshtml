@model ResidentalComplexManagment.Web.Areas.Admin.Models.AppartmentGetVM;
@{
    ViewData["Title"] = "Mənzil " + @Model.Appartment.Name;
}


<div class="d-lg-flex d-md-flex d-sm-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-4 pb-2 mb-3 ">
    <h2 class="h2">@ViewData["Title"]</h2>
    <div class="btn-toolbar mb-2 mb-md-0">
        <div class="btn-group w-100 ">
            <a href="/admin/resident/AddFromAppartment/@Model.Appartment.Id" class="btn p-2 text-white border bg-primary" type="button">Ev sahibi yarat</a>
        </div>
    </div>
</div>



<div class="card mb-3 px-4 shadowBox border-0  border-radius-card">
    <h5 class="my-4 font-weight-bold">@ViewData["Title"]</h5>

    <div class="row">
        <div class="col-lg-4 col-12">
            <div class="form-group">
                <label for="formGroupExampleInput">Şərti ad</label>
                <label class="form-control"> @Model.Appartment.Name</label>
            </div>

        </div>

        <div class="col-lg-4 col-12">
            <div class="form-group">
                <label for="formGroupExampleInput" class="d-block">Sahəsi</label>
                <label class="form-control"> @Model.Appartment.Area</label>
            </div>
        </div>

        <div class="col-lg-4 col-12">
            <div class="form-group">
                <label for="formGroupExampleInput">Qapı Nömrəsi</label>
                <label class="form-control">@Model.Appartment.DoorNumber</label>
            </div>
        </div>


        <div class="col-lg-6 col-12">
            <div class="form-group">
                <label for="formGroupExampleInput">Bina</label>
                <label class="form-control">@Model.Appartment.BuildingName</label>
            </div>
        </div>

        <div class="col-lg-6 col-12">
            <div class="form-group">
                <label for="formGroupExampleInput" class="d-block">MTK</label>
                <label class="form-control">@Model.Appartment.MtkName</label>

            </div>
        </div>




        <a href="/admin/appartment/update/@Model.Appartment.Id" class="btn p-2 m-2 text-white border bg-primary"> <i class="fas fa-pen"></i> </a>

    </div>

</div>


<div class="card px-4 shadowBox border-0 table-responsive border-radius-card">
    <div class="row align-items-center ">
        <div class="col-lg-6">
            <h5 class="my-4 float-lg-left">@ViewData["Title"]</h5>
        </div>
        @* <div class="col-lg-6">
            <div class="float-lg-right d-lg-flex  align-items-center">
            <button type="button" class="btn w-100 text-left mr-3 mb-3 mb-lg-0 border colorSecondary">
            <i class="fas fa-file-download colorSecondary fa-lg mr-2"></i> Hesabat yarat
            </button>
            <input type="text" class="form-control w-100 colorSecondary" placeholder="Axtarış" />
            </div>

            </div>*@
        <div class="clearfix"></div>
    </div>
    <table class="table w-100 table-borderless mt-4 mt-lg-0">
        <thead class="bgSecondary">
            <tr>
                <th class="pl-4 ">Ad Soyad </th>
                <th class="pl-4 ">Təvəlüd </th>
                <th class="pl-4 ">FİN</th>
                <th class="pl-4 ">Telefon Nömrəsi</th>
                <th class="pl-4 ">İndi yaşıyır</th>
                <th class="pl-4 ">ACTION </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in @Model.Residents)
            {
                <tr>
                    <td class="pl-4" data-label="Şərti ad">@item.FullName</td>
                    <td class="pl-4" data-label="IBAN">@item.Birthday</td>
                    <td class="pl-4" data-label="Telefon">@item.FIN</td>
                    <td class="pl-4" data-label="Ünvan">@item.PhoneNumber</td>
                    <td class="pl-4 @(item.IsCurrentResident?"text-success":"text-warning")" data-label="Ünvan">@item.ResidentState</td>
                    <td class="pl-4" data-label="ACTION">
                        <a asp-action="Update" asp-controller="Resident" asp-route-id="@item.Id"><i class="far fa-edit"></i> </a>
                        @if (item.IsCurrentResident)
                        {
                            <a asp-action="AddDebtItem" asp-controller="Resident" asp-route-id="@item.Id" class="ml-2"><i class="fas fa-receipt"></i></a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>

