@model ResidentalComplexManagment.Web.Areas.Admin.Models.UserIndexVM;
@{
    ViewData["Title"] = "İstifadəçi";
}

<div class="d-lg-flex d-md-flex d-sm-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-4 pb-2 mb-3 ">
    <h2 class="h2">@ViewData["Title"]</h2>
    <div class="btn-toolbar mb-2 mb-md-0">
        <div class="btn-group w-100 ">
            <a href="/admin/user/add"  class="btn p-2 text-white border bg-primary" type="button">Yeni İstifadəçi yarat</a>
        </div>
    </div>
</div>
<div class="card px-4 shadowBox border-0 table-responsive border-radius-card">
    <div class="row align-items-center ">
        <div class="col-lg-6">
            <h5 class="my-4 float-lg-left">@ViewData["Title"]</h5>
        </div>
        <div class="col-lg-6">
   @*         <div class="float-lg-right d-lg-flex  align-items-center">
                <button type="button" class="btn w-100 text-left mr-3 mb-3 mb-lg-0 border colorSecondary">
                    <i class="fas fa-file-download colorSecondary fa-lg mr-2"></i> Hesabat yarat
                </button>
                <input type="text" class="form-control w-100 colorSecondary" placeholder="Axtarış" />
            </div>*@

        </div>
        <div class="clearfix"></div>
    </div>
    <table class="table w-100 table-borderless mt-4 mt-lg-0">
        <thead class="bgSecondary">
            <tr>
                <th class="pl-4 ">Ad</th>
                <th class="pl-4 ">Soyad</th>
                <th class="pl-4 ">İstifadəçi adı</th>
                <th class="pl-4 ">Mtk</th>
                <th class="pl-4 ">Rol</th>
                <th class="pl-4 ">ACTION </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in @Model.Users)
            {
                <tr>
                    <td class="pl-4" data-label="Ad">@item.Name</td>
                    <td class="pl-4" data-label="Soyad">@item.SurName</td>
                    <td class="pl-4" data-label="Telefon">@item.UserName</td>
                    <td class="pl-4" data-label="Mtk">@item.MtkName</td>
                    <td class="pl-4" data-label="Mtk">@item.Role</td>


                    <td class="pl-4" data-label="ACTION">
                        <a asp-action="Update" asp-controller="User" asp-route-id="@item.Id"><i class="far fa-edit"></i> </a> 
                        @*<a asp-action="Delete" asp-controller="Building" asp-route-id="@item.Id"> <i class="far fa-trash-alt"></i> </a>  *@
                     

                    </td>
                </tr>
            }
        </tbody>
    </table>

