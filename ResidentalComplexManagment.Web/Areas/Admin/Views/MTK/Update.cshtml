@model ResidentalComplexManagment.Application.Models.MTKDTO;
@{
    ViewData["Title"] = "MTK Redaktə Et";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-4 pb-2 mb-3 ">
    <h2 class="h2">MTK redaktə et</h2>
</div>
<form asp-action="Update" asp-controller="MTK"  method="post">
    <div class="card mb-3 px-4 shadowBox border-0  border-radius-card">
        <h5 class="my-4 font-weight-bold">Yeni MTK əlavə et</h5>

        <input type="hidden" class="form-control"  asp-for="Id" />

        <div class="row">
            <div class="col-lg-6 col-12">
                <div class="form-group">
                    <label for="formGroupExampleInput">Şərti ad</label>
                    <input type="text" class="form-control" id="formGroupExampleInput" placeholder="Şərti adı" asp-for="Name" />
                </div>
            </div>

            <div class="col-lg-6 col-12">
                <div class="form-group">
                    <label for="formGroupExampleInput">IBAN nömrəsi</label>
                    <input type="text" class="form-control" id="formGroupExampleInput"
                           placeholder="IBAN nömrəsi" asp-for="IBAN">
                </div>
            </div>

            <div class="col-lg-6 col-12">
                <div class="form-group">
                    <label for="formGroupExampleInput">Telefon Nömrəsi</label>
                    <input type="text" class="form-control" id="formGroupExampleInput"
                           placeholder="Telefon Nömrəsi" asp-for="PhoneNumber">
                </div>
            </div>

            <div class="col-lg-6 col-12">
                <div class="form-group">
                    <label for="formGroupExampleInput">Ünvan</label>
                    <textarea  id="formGroupExampleInput" rows="5" class="form-control" asp-for="Address"></textarea>
                </div>
            </div>


        </div>



    </div>

    <button type="submit" class="btn p-2  text-white border bg-primary">Yadda saxla </button>
    <button type="button" asp-action="Index" asp-controller="MTK" class="btn p-2  text-white border bg-primary">Imtina</button>
</form>